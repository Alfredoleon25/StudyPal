// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  role      Role
  subjects  String[] 
  createdAt DateTime @default(now())
}

model Request {
  id        String   @id @default(uuid())
  learnerId String
  tutorId   String
  subject   String
  message   String
  createdAt DateTime @default(now())
}

enum Role {
  learner
  tutor
}
