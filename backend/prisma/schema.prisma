// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  role      Role
  subjects  String[] 
  createdAt DateTime @default(now())

    // Add relations
  sentRequests     Request[] @relation("LearnerRequests")
  receivedRequests Request[] @relation("TutorRequests")
  chatsAsLearner   Chat[]    @relation("LearnerChats")
  chatsAsTutor     Chat[]    @relation("TutorChats")
  messages         Message[]

}

model Request {
  id        String   @id @default(uuid())
  learnerId String
  tutorId   String
  subject   String
  message   String
  createdAt DateTime @default(now())

    // Add relations
  learner   User     @relation("LearnerRequests", fields: [learnerId], references: [id])
  tutor     User     @relation("TutorRequests", fields: [tutorId], references: [id])
}
model Chat {
  id        String    @id @default(uuid())
  learnerId String
  tutorId   String
  subject   String
  createdAt DateTime  @default(now())
    
  learner   User      @relation("LearnerChats", fields: [learnerId], references: [id])
  tutor     User      @relation("TutorChats", fields: [tutorId], references: [id])
  messages  Message[]
  
  @@unique([learnerId, tutorId, subject]) // Prevent duplicate chats
}

model Message {
  id        String   @id @default(uuid())
  chatId    String
  senderId  String
  content   String
  createdAt DateTime @default(now())
  
  chat      Chat     @relation(fields: [chatId], references: [id])
  sender    User     @relation(fields: [senderId], references: [id])
}
enum Role {
  learner
  tutor
}
