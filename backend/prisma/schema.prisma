
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())

  learnSubjects   String[] // Subjects I want to learn
  teachSubjects   String[] // Subjects I can teach
  chatsAsLearner   Chat[]    @relation("LearnerChats")
  chatsAsTutor     Chat[]    @relation("TutorChats")
  messages         Message[]
}

model Chat {
  id        String    @id @default(uuid())
  learnerId String
  tutorId   String
  subject   String
  createdAt DateTime  @default(now())
  
  learner   User      @relation("LearnerChats", fields: [learnerId], references: [id])
  tutor     User      @relation("TutorChats", fields: [tutorId], references: [id])
  messages  Message[]
  
  @@unique([learnerId, tutorId, subject])
}

model Message {
  id        String   @id @default(uuid())
  chatId    String
  senderId  String
  content   String
  createdAt DateTime @default(now())
  
  chat      Chat     @relation(fields: [chatId], references: [id])
  sender    User     @relation(fields: [senderId], references: [id])
}